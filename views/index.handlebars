<h1>Eat that Burger!</h1>

<div class="row">
  <div class="col-4">
    <h3>Order Up!</h3>
    <ol>
      {{#each burgers}}
      {{#unless devoured}}
      <h4 class="text-center">{{id}} {{burger_name}} </h4>
      <button class="eat" data-id="{{id}}"> Eat UP</button>
      {{/unless}}
      {{/each}}
    </ol>
  </div>

<div class="col-4">
  <h2>In your belly!</h2>
  
    <ol>
      {{#each burgers}}
      {{#if devoured}}
      <h4 class="text-center"> {{id}} {{burger_name}} </h4>
      {{/if}}
      {{/each}}
    </ol>
  </div>
</div>

<h2>What would you like?</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>



  <button type="submit">Order Burger</button>
</form>